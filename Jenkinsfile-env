pipeline {
    agent none
    agent {
      node {
        label 'nodejs'
      }
    }
    stages {
        // can't specify an agent here
        stage ('host and context') {
            //agent any
            steps {
                sh 'hostname'
                // give it time to check pod creation
                sleep (30)
                sh 'oc whoami'
                sh 'oc whoami -t'
                sh 'oc whoami -c || oc project test-nobuild'
                sh 'oc get pod'
                // give it time to check pod creation
                sleep (30)
            }
        }
    }
}
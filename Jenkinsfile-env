pipeline {
    agent {
      node {
        // spin up a node.js slave pod to run this build on
        label 'base'
      }
    }
    stages {
        stage ('host and context') {
            steps {
                sh 'hostname'
                // give it time to check pod creation
                sleep (60)
                sh 'oc whoami'
                sh 'oc whoami -t'
                sh 'oc whoami -c'
                sh 'oc get pod'
            }
        }
    }
}
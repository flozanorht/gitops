pipeline {
    triggers {
        pollSCM ('H/5 * * * *')
        //upstream (upstreamProjects: 'drift', threshold: hudson.model.Result.SUCCESS)
    }
    agent {
      node {
        // try later defining a pod template using the base agent image or creating an is for the base agent image
        label 'nodejs'
      }
    }
    stages {
        stage ('Apply resources') {
            steps {
                sh 'awk -F: \'{ print $1 }\' config/idp-localusers-data'
                sh 'oc apply -k config'
            }
        }
        stage ('Verify test user') {
            steps {
                sh 'oc login -u testuser -p redhat123 --insecure-skip-tls-verify https://kubernetes.default.svc:443'
            }
        }
    }
}